{
	"extends": "@typeskrift/tsconfig",
	"compilerOptions": {
		"alwaysStrict": false,
		"incremental": true,
		"lib": ["es2018"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitReturns": false,
		"outDir": "dist",
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": false,
		"strictNullChecks": false,
		"target": "es2018",
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["src/**/**.ts"],
	"exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
